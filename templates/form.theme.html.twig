{% block form_row %}
<div class="mb-4">
    {{ form_label(form) }}
    {% if form.vars.block_prefixes|last == 'checkbox' %}
    <label class="flex items-center cursor-pointer">
        {{ form_widget(form, { attr: { class: 'hidden toggle-checkbox-input' } }) }}
        <div class="relative">
            <div class="block bg-gray-300 w-14 h-8 rounded-full"></div>
            <div class="dot absolute left-1 top-1 bg-white w-6 h-6 rounded-full transition"></div>
        </div>
    </label>
    {% else %}
    {{ form_widget(form, { attr: { class: 'mt-1 block w-full px- py-2 border border-gray-300 rounded-md shadow-sm text-black' } }) }}
    {% endif %}
    {{ form_errors(form) }}
</div>
{% endblock %}
