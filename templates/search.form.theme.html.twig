{% block form_row %}
<div class="mb-4 flex items-center justify-between gap-3 flex-row">
    <label class="text-white mt-4">{{ form_label(form) }}</label>
    
    {% if form.vars.block_prefixes|last == 'checkbox' %}
    <label class="flex items-center justify-center cursor-pointer">
        {{ form_widget(form, { attr: { class: 'hidden toggle-checkbox-input' } }) }}
        <div class="relative">
            <div class="block bg-gray-300 w-14 h-8 rounded-full"></div>
            <div class="dot absolute left-1 top-1 bg-white w-6 h-6 rounded-full transition"></div>
        </div>
    </label>
    {% else %}
    {{ form_widget(form, { attr: { class: 'w-full  px-3 py-2 border border-gray-300 mt-4 rounded-md shadow-sm text-black' } }) }}
    {% endif %}
    {{ form_errors(form) }}
</div>
{% endblock %}
